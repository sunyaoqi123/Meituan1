<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 上半部分黄色 -->
    <item
        android:top="0dp"
        android:bottom="100dp"> <!-- 占父容器高度的 50% -->
        <shape android:shape="rectangle">
            <solid android:color="#FFF0F5" /> <!-- 黄色 -->
        </shape>
    </item>

    <!-- 下半部分白色 -->
    <item
        android:top="145dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> /> <!-- 白色 -->
        </shape>
    </item>
</layer-list>