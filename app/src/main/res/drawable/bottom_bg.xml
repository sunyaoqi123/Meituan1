<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 上半部分黄色 -->
    <item
        android:left="0dp"><!-- 占父容器高度的 50% -->
        <shape android:shape="rectangle">
            <solid android:color="@color/Gold" /> <!-- 黄色 -->
        </shape>
    </item>

    <!-- 下半部分白色 -->
    <item
        android:right="100dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> /> <!-- 白色 -->
        </shape>
    </item>
</layer-list>